root = true

[*]
max_line_length = 100
indent_size = 2
end_of_line = lf
indent_style = space
tab_width = 2
# trim_trailing_whitespace = true
ij_any_block_brace_style = end_of_line
ij_typescript_blank_lines_after_imports = 1
ij_typescript_use_double_quotes = false
ij_any_keep_indents_on_empty_lines = false
ij_javascript_function_expression_brace_style = end_of_line

ij_any_space_after_comma = true
ij_any_spaces_within_braces = true
ij_json_spaces_within_braces = true
ij_typescript_spaces_within_imports = true
ij_json_spaces_within_brackets = true
ij_typescript_space_before_type_colon = true
ij_javascript_spaces_within_brackets = true
ij_editorconfig_spaces_around_assignment_operators = true
